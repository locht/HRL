                Case CommonMessage.STATE_NORMAL
                    EnabledGridNotPostback(rgMain, True)
                    EnableControlAll(False, txtAllowance, rdEffectDate, rdExpireDate)
                    EnableControlAll(False, txtAllowance, rdEffectDate)

                Case CommonMessage.STATE_EDIT
                    EnabledGridNotPostback(rgMain, False)
                    EnableControlAll(True, txtAllowance, rdEffectDate, rdExpireDate)
                    EnableControlAll(False, txtAllowance, rdEffectDate)
            End Select

            rdExpireDate.Focus()
