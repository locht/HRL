    ''' <summary>
    ''' Phuong thuc tao du lieu filter
    ''' </summary>
    ''' <param name="isFull"></param>
    ''' <returns></returns>
    ''' <remarks></remarks>
    Protected Function CreateDataFilter(Optional ByVal isFull As Boolean = False) As DataTable
        Dim _filter As New OccupationalSafetyDTO
        Dim rep As New ProfileBusinessRepository
        Dim startTime As DateTime = DateTime.UtcNow
        Dim method As String = System.Reflection.MethodBase.GetCurrentMethod().Name.ToString()
        Try
            If ctrlOrg.CurrentValue <> "" Then
                _filter.ORG_ID = ctrlOrg.CurrentValue
            Else
                _filter.ORG_ID = 0
            End If
            SetValueObjectByRadGrid(rgData, _filter)
            Dim MaximumRows As Integer
            Dim Sorts As String = rgData.MasterTableView.SortExpressions.GetSortString()
            _filter.IS_TERMINATE = chkChecknghiViec.Checked
            If rdFrom.SelectedDate IsNot Nothing Then
                _filter.FROM_DATE_SEARCH = rdFrom.SelectedDate
            End If
            If rdTo.SelectedDate IsNot Nothing Then
                _filter.TO_DATE_SEARCH = rdTo.SelectedDate
            End If
            If isFull Then
                If Sorts IsNot Nothing Then
                    Return rep.GetOccupationalSafety(_filter, ctrlOrg.IsDissolve, Sorts).ToTable()
                Else
                    Return rep.GetOccupationalSafety(_filter, ctrlOrg.IsDissolve).ToTable()
                End If
            Else
                Dim lstOccupationalSafety As New List(Of OccupationalSafetyDTO)
                If Sorts IsNot Nothing Then
                    lstOccupationalSafety = rep.GetOccupationalSafety(_filter, ctrlOrg.IsDissolve, rgData.CurrentPageIndex, rgData.PageSize, MaximumRows, Sorts)
                Else
                    lstOccupationalSafety = rep.GetOccupationalSafety(_filter, ctrlOrg.IsDissolve, rgData.CurrentPageIndex, rgData.PageSize, MaximumRows)
                End If
                rgData.VirtualItemCount = MaximumRows
                rgData.DataSource = lstOccupationalSafety
            End If
            rep.Dispose()
            _mylog.WriteLog(_mylog._info, _classPath, method, CLng(DateTime.UtcNow.Subtract(startTime).TotalSeconds).ToString(), Nothing, "")
        Catch ex As Exception
            Throw ex
            _myLog.WriteLog(_myLog._error, _classPath, method, 0, ex, "")
        End Try
    End Function
